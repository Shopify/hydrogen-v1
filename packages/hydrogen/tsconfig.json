{
  "exclude": ["**/__tests__", "**/tests", "**/*.example.*", "dist/**"],
  "compilerOptions": {
    "declaration": true,
    "jsx": "react-jsx",
    "target": "ES2022",
    "outDir": "./dist/esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": ["jest", "@shopify/react-testing/matchers"],
    "strict": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "preserveWatchOutput": true,
    "allowJs": true
  }
}
