{
  "include": ["./src"],
  "exclude": ["./framework", "**/*.example.*"],
  "compilerOptions": {
    "declaration": true,
    "jsx": "react",
    "target": "ES2018",
    "outDir": "./dist/esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM"],
    "types": ["jest", "@shopify/react-testing/matchers"],
    "strict": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "preserveWatchOutput": true
  }
}
