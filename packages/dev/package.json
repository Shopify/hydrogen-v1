{
  "name": "dev",
  "description": "This is a dev environment for Hydrogen",
  "version": "0.8.2",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "vite",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint --no-error-on-unmatched-pattern --ext .js,.ts,.jsx,.tsx src",
    "lint:css": "stylelint ./src/**/*.{css,sass,scss}",
    "setGitHash": "if [ `print $GITHUB_SHA` != \"\" ]; then cross-env GITHASH=`echo $GITHUB_SHA`; else cross-env GITHASH=`git rev-parse --short HEAD`; fi;",
    "build": "yarn build:client && yarn build:server && yarn build:worker",
    "build:client": "yarn setGitHash && vite build --outDir dist/client --manifest",
    "build:server": "yarn setGitHash && vite build --outDir dist/server --ssr src/entry-server.jsx",
    "build:worker": "yarn setGitHash && cross-env WORKER=true vite build --outDir dist/worker --ssr worker.js",
    "serve": "node --enable-source-maps server"
  },
  "prettier": "@shopify/prettier-config",
  "devDependencies": {
    "@rollup/plugin-replace": "^3.0.1",
    "@shopify/prettier-config": "^1.1.2",
    "@shopify/stylelint-plugin": "^10.0.1",
    "@tailwindcss/typography": "^0.5.0",
    "autoprefixer": "^10.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.31.0",
    "eslint-plugin-hydrogen": "^0.6.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "prettier": "^2.3.2",
    "stylelint": "^13.13.0",
    "tailwindcss": "^3.0.0",
    "vite": "^2.7.0"
  },
  "dependencies": {
    "@headlessui/react": "^1.4.1",
    "@shopify/hydrogen": "^0.8.2",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "graphql-tag": "^2.12.4",
    "react": "0.0.0-experimental-0cc724c77-20211125",
    "react-dom": "0.0.0-experimental-0cc724c77-20211125",
    "react-router-dom": "^5.2.0",
    "serve-static": "^1.14.1"
  }
}
